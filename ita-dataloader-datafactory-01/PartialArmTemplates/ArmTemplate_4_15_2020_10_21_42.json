										},
										"sink": {
											"name": "2015_percentTotal"
										}
									},
									{
										"source": {
											"name": "2016_Value",
											"type": "String"
										},
										"sink": {
											"name": "2016_Value"
										}
									},
									{
										"source": {
											"name": "2016_percentTotal",
											"type": "String"
										},
										"sink": {
											"name": "2016_percentTotal"
										}
									},
									{
										"source": {
											"name": "2017_Value",
											"type": "String"
										},
										"sink": {
											"name": "2017_Value"
										}
									},
									{
										"source": {
											"name": "2017_percentTotal",
											"type": "String"
										},
										"sink": {
											"name": "2017_percentTotal"
										}
									},
									{
										"source": {
											"name": "2018_Value",
											"type": "String"
										},
										"sink": {
											"name": "2018_Value"
										}
									},
									{
										"source": {
											"name": "2018_percentTotal",
											"type": "String"
										},
										"sink": {
											"name": "2018_percentTotal"
										}
									},
									{
										"source": {
											"name": "2019_Value",
											"type": "String"
										},
										"sink": {
											"name": "2019_Value"
										}
									},
									{
										"source": {
											"name": "2019_percentTotal",
											"type": "String"
										},
										"sink": {
											"name": "2019_percentTotal"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "AeroTop20SuppliersAnnual",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "AeroTop20SuppliersAnnualDb",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AeroTop20SuppliersAnnual')]",
				"[concat(variables('factoryId'), '/datasets/AeroTop20SuppliersAnnualDb')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AeroTop20SuppliersAnnual')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "AeroTop20ExpMktsAnnual_reformat.csv",
						"container": "demo"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Supplier",
						"type": "String"
					},
					{
						"name": "2015_Value",
						"type": "String"
					},
					{
						"name": "2015_percentTotal",
						"type": "String"
					},
					{
						"name": "2016_Value",
						"type": "String"
					},
					{
						"name": "2016_percentTotal",
						"type": "String"
					},
					{
						"name": "2017_Value",
						"type": "String"
					},
					{
						"name": "2017_percentTotal",
						"type": "String"
					},
					{
						"name": "2018_Value",
						"type": "String"
					},
					{
						"name": "2018_percentTotal",
						"type": "String"
					},
					{
						"name": "2019_Value",
						"type": "String"
					},
					{
						"name": "2019_percentTotal",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AeroTop20SuppliersAnnualDb')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabase",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [],
				"typeProperties": {
					"schema": "dbo",
					"table": "AERO_TOP_20_SUPPLIERS_ANNUAL"
				}
			},
			"dependsOn": []
		}
	]
}