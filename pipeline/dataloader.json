{
	"name": "dataloader",
	"properties": {
		"activities": [
			{
				"name": "Copy Usage Stats",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "TRUNCATE TABLE DATALOADER_USAGE_STATS;",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['fileName']"
								},
								"sink": {
									"name": "FILE_NAME",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['snapshot']"
								},
								"sink": {
									"name": "SNAPSHOT",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['url']"
								},
								"sink": {
									"name": "URL",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['size']"
								},
								"sink": {
									"name": "SIZE",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "$['containerName']"
								},
								"sink": {
									"name": "CONTAINER",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['uploadedAt']"
								},
								"sink": {
									"name": "UPLOADED_AT",
									"type": "DateTime"
								}
							},
							{
								"source": {
									"path": "$['metadata']['pii']"
								},
								"sink": {
									"name": "PII",
									"type": "Boolean"
								}
							},
							{
								"source": {
									"path": "$['metadata']['uploaded_by']"
								},
								"sink": {
									"name": "UPLOADED_BY",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "UsageStatsBlob",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "UsageStatsDb",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}